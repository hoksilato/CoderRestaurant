<%= stylesheet_link_tag '/css/narrow-jumbotron' %>

<div class="container">
  <%= render 'menus/header' %>

  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-5">
        <% image_string = @dish.name.downcase %>
        <%= image_tag (@dish.image_url.nil? || @dish.image_url.empty?) ? 'http://loremflickr.com/435/300/' + image_string.gsub!(/\s/, '+') : @dish.image_url, alt: @dish.name, style: 'width: 100%;' %>
      </div>
      <div class="col-lg-7">
        <div class="card">
          <div class="card-header">
            <%= @dish.menu.name %>
          </div>
          <div class="card-block">
            <h4 class="card-title"><%= @dish.name %></h4>
            <p><%= number_to_currency(@dish.price, unit: 'Ä‘', format: "%n %u") %></p>
            <p class="card-text"><%= @dish.description %></p>
            <%= link_to 'Order', new_order_path(@dish), class: 'btn btn-primary' %>
          </div>
          <div class="card-footer text-muted">
            <%= pluralize(@dish.views, 'view') %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="footer">
    <p>&copy; CoderRestaurant 2015</p>
  </footer>

</div> <!-- /container -->