<%= stylesheet_link_tag '/css/narrow-jumbotron' %>

<div class="container">
  <%= render 'menus/header' %>

  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-8">
      	<p id="notice"><%= notice %></p>

        <%= render 'form' %>
      </div>
      <div class="col-lg-4">
      	<h4>Here is your dish:</h4>
        <div class="card">
		  <div class="card-block">
		    <h4 class="card-title"><%= link_to @dish.name, @dish %></h4>
		    <h6 class="card-subtitle text-muted"><%= number_to_currency(@dish.price, unit: 'Ä‘', format: "%n %u") %> <span class="pull-right"><%= pluralize(@dish.views, 'view') %></span></h6>
		  </div>
		  <div class="card-block text-center">
		  <% image_string = @dish.name.downcase %>
		  <%= link_to image_tag((@dish.image_url.nil? || @dish.image_url.empty?) ? 'http://loremflickr.com/262/180/' + image_string.gsub!(/\s/, '+') : @dish.image_url, alt: @dish.name), @dish %>
		  </div>
		  <div class="card-block">
		    <p class="card-text"><%= @dish.description %></p>
		  </div>
		</div>
      </div>
    </div>
  </div>

  <footer class="footer">
    <p>&copy; CoderRestaurant 2015</p>
  </footer>

</div> <!-- /container -->